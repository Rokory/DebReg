@model DebReg.Web.Models.TournamentOrganizationRegistrationViewModel
@{
    Layout = null;
}

@using System.Security.Claims
<!DOCTYPE html>

<html lang="en">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap -->
        <link href="~/Content/bootstrap.min.css" rel="stylesheet">
        <link href="~/Content/bottomfix.css" rel="stylesheet" />
        <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>


        <title>@Resources.TournamentRegistration.PrintAccountStatement.Strings.Title</title>
    </head>
    <body style="margin: 50px">
        <small class="text-right">
            @Html.DisplayFor(m => m.Registration.Tournament.HostingOrganization, "OrganizationCompact")
        </small>
        <hr />
        @Html.DisplayFor(m => m.Registration.BilledOrganization, "OrganizationCompact")
        <h3>
            @Resources.TournamentRegistration.PrintAccountStatement.Strings.Heading
            @{
                DateTime today = DateTime.Today;
            }
            @Html.DisplayFor(m => today, "Date")
        </h3>
        @Html.DisplayFor(m => m, "Bookings")
        @Html.DisplayFor(m => m.Registration, "BankData")
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <!-- Include all compiled plugins (below), or include individual files as needed -->
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/formatDateTime.js"></script>
        <script>
            window.print();
        </script>
    </body>
</html>
