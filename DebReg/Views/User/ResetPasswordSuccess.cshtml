@model DebReg.Web.Models.PasswordResetRequest

@{
    ViewBag.Title = Html.Encode(Resources.User.ResetPasswordSuccess.Strings.Title);
}

<div>
    <h2>@Html.Encode(Resources.User.ResetPasswordSuccess.Strings.Heading)</h2>
    <hr />
    <p>
        @Html.Encode(Resources.User.ResetPasswordSuccess.Strings.BodyText1)
        @Html.DisplayFor(model => model.EMail)
        @Html.Encode(Resources.User.ResetPasswordSuccess.Strings.BodyText2)
    </p>
</div>
<p>
    @Html.ActionLink("Login", Html.Encode(Resources.User.ResetPasswordSuccess.Strings.LoginLink), new { returnUrl = ViewBag.returnUrl })
</p>
