@model List<DebReg.Models.TournamentOrganizationRegistration>
@{
    ViewBag.Title = Resources.TournamentManagement.Slot.UpdateRanks.Strings.Title;
}

<h2>@Html.Encode(Resources.TournamentManagement.Slot.UpdateRanks.Strings.Heading)</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm()) {
    <table class="table-striped">
        <thead>
            <tr>
                <th>@Html.Encode(Resources.Models.Organization.Strings.Name)</th>
                <th>@Html.Encode(Resources.TournamentManagement.Slot.UpdateRanks.Strings.RankLabel)</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++) {
                @Html.HiddenFor(model => model[i].OrganizationId)
                <tr>
                    <td>
                        @Html.DisplayFor(model => model[i].Organization.Name)
                    </td>
                    <td>
                        @Html.EditorFor(model => model[i].Rank, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model[i], "", new { @class = "text-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        <button type="submit" class="btn btn-default">
            @Html.Encode(Resources.TournamentManagement.Slot.UpdateRanks.Strings.UpdateRanksButtonCaption)
        </button>
    </p>
}