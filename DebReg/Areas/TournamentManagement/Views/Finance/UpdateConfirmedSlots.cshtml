@model List<DebReg.Web.Areas.TournamentManagement.Models.PaymentViewModel>
@{
    ViewBag.Title = Resources.TournamentManagement.Finance.UpdateConfirmedSlots.Strings.Title;
}

<h2>@Resources.TournamentManagement.Finance.UpdateConfirmedSlots.Strings.Heading</h2>
<p>@Resources.TournamentManagement.Finance.UpdateConfirmedSlots.Strings.Body</p>
@using (Html.BeginForm("UpdateConfirmedSlots", "Finance")) {
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th rowspan="3">@Resources.Models.Organization.Strings.Name</th>
                <th rowspan="3" class="text-right">@Resources.Strings.BalanceCaption</th>
                <th colspan="3" class="text-center">@Resources.Strings.TeamsCaption</th>
                <th colspan="3" class="text-center">@Resources.Strings.AdjudicatorsCaption</th>
            </tr>
            <tr>
                <th rowspan="2" class="text-center">@Resources.Strings.GrantedCaption</th>
                <th colspan="2" class="text-center">@Resources.Strings.PaidCaption</th>
                <th rowspan="2" class="text-center">@Resources.Strings.GrantedCaption</th>
                <th colspan="2" class="text-center">@Resources.Strings.PaidCaption</th>
            </tr>
            <tr>
                <th class="text-center">@Resources.Strings.OldCaption</th>
                <th class="text-center">@Resources.Strings.NewCaption</th>
                <th class="text-center">@Resources.Strings.OldCaption</th>
                <th class="text-center">@Resources.Strings.NewCaption</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++) {
                <tr>
                    <td>
                        <a href="javascript:void (0);" onclick="displayOrganizationDetails('@Model[i].OrganizationId')">
                            @Html.DisplayFor(model => model[i].OrganizationName)
                        </a>
                        @Html.HiddenFor(model => model[i].OrganizationId)
                    </td>
                    <td class="text-right">@Html.DisplayFor(model => model[i].Balance)</td>
                    <td class="text-center">@Html.DisplayFor(model => model[i].TeamsGranted)</td>
                    <td class="text-center">@Html.DisplayFor(model => model[i].TeamsPaidOld)</td>
                    <td class="text-center">
                        @Html.DisplayFor(model => model[i].TeamsPaid)
                        @Html.HiddenFor(model => model[i].TeamsPaid)
                    </td>
                    <td class="text-center">@Html.DisplayFor(model => model[i].AdjudicatorsGranted)</td>
                    <td class="text-center">@Html.DisplayFor(model => model[i].AdjudicatorsPaidOld)</td>
                    <td class="text-center">
                        @Html.DisplayFor(model => model[i].AdjudicatorsPaid)                    
                        @Html.HiddenFor(model => model[i].AdjudicatorsPaid)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink(Resources.Strings.NoButtonCaption, "Index", null, new { @class = "btn btn-default"})
        <button type="submit" class="btn btn-danger">@Resources.Strings.YesButtonCaption</button>
    </p>
}

